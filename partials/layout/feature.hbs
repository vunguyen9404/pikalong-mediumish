{{!-- Fetching Featured Post --}}
{{#get "posts" filter="featured:true" limit="4" include="authors" as |featured| }}
	{{#if featured}}
		<!-- Begin Featured
		================================================== -->
		<section class="featured-posts">
			<div class="section-title">
				<h2><span>Featured Post</span></h2>
			</div>
			<div class="listfeaturedtag">
				<div class="row">
					{{#foreach featured}}
						{{> list/featured-post }}
					{{/foreach}}
				</div>
			</div>
		</section>
		<!-- End Featured
		================================================== -->
	{{/if}}
{{/get}}